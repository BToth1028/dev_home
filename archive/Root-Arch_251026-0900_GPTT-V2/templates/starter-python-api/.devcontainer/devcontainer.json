{
  "name": "starter-python-api dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "postCreateCommand": "pip install -U pip && pip install -r requirements.txt || true && pre-commit install || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig"
      ]
    }
  },
  "runArgs": [
    "--env-file",
    ".env"
  ]
}