# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix-style line endings for specific files
*.sh text eol=lf
*.bash text eol=lf

# Force Windows-style line endings for specific files
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Source code
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.sql text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf

